@model SportsPro.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h4>@ViewData["Title"]</h4>

<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearlyPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearlyPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $('#incident').removeClass("active");
    $('#technician').removeClass("active");
    $('#product').addClass("active");
    $('#registration').removeClass("active");
    $('#customer').removeClass("active");
</script>