@model IEnumerable<SportsPro.Models.Customer>

@{
    ViewData["Title"] = "Customers";
    var custs = new SelectList(Model, "CustomerID", "FullName");
    var cust = Model.First();
}
<h2>@ViewData["Title"]</h2>
<hr />
<p>@ViewBag.Message</p>
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label"></label>
            <select id="uxCustomerSelection" class="form-control" asp-items="custs">
                <option value="" selected>Select Customer</option>
            </select>
        </div>
    </div>
</div>

<div id="uxRegistrations">
</div>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#uxCustomerSelection').change(function () {
            var customerId = $("#uxCustomerSelection").val();
            $.ajax({
                method: 'GET',
                url: '/registrations/customerProducts',
                data: { id: customerId }
            }).done(function (result, statusText, xhdr) {
                $('#uxRegistrations').html(result);
            });
        });
    });
</script>