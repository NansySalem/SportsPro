@model SportsPro.Models.Registration

@{
    var id = Url.ActionContext.RouteData.Values["id"];
    if (id != null)
        ViewData["Title"] = "Update Registration";
    else
        ViewData["Title"] = "Add Registration";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (id != null)
            {<input type="hidden" asp-for="RegistrationID" />}
            <div class="form-group">
                <label asp-for="Customer.FullName" class="control-label"></label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID">
                    <option value="" selected>Select Customer</option>
                </select>
                <span asp-validation-for="@Model.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID">
                    <option value="" selected>Select Product</option>
                </select>
                <span asp-validation-for="@Model.ProductID" class="text-danger"></span>
            </div>


            <div class="form-group">
                @if (id != null)
                {<input type="submit" value="Update" class="btn btn-primary" />}
                else
                {<input type="submit" value="Add" class="btn btn-primary" />}
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $('#incident').removeClass("active");
    $('#technician').removeClass("active");
    $('#product').removeClass("active");
    $('#registration').addClass("active");
    $('#customer').removeClass("active");
</script>