@model SportsPro.Models.Registration

@{
    ViewData["Title"] = "Delete Registration";
}

<h4>Are you sure you want to delete this product registration?</h4>
<hr />
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RegistrationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $('#incident').removeClass("active");
    $('#technician').removeClass("active");
    $('#product').removeClass("active");
    $('#registration').addClass("active");
    $('#customer').removeClass("active");
</script>
