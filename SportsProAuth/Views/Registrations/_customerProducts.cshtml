@model IEnumerable<SportsPro.Models.Registration>
@if (this.Model.Count() > 0)
{



<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegistrationID">Edit</a> | <a asp-action="Delete" asp-route-id="@item.RegistrationID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
}
else
{<p>No products for this customer. </p>}