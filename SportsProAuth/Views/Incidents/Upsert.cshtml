@model SportsPro.Models.Incident

@{
    var id = Url.ActionContext.RouteData.Values["id"];
    if ( id != null)
        ViewData["Title"] = "Update Incident";
    else
        ViewData["Title"] = "Add Incident";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Upsert">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (id != null)
                {<input type="hidden" asp-for="IncidentID" />}
            <div class="form-group">
                <label asp-for="Customer.FullName" class="control-label"></label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID">
                    <option value="" selected>Select Customer</option>
                </select>
                <span asp-validation-for="@Model.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID">
                    <option value="" selected>Select Product</option>
                </select>
                <span asp-validation-for="@Model.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Technician.Name" class="control-label"></label>
                <select asp-for="TechnicianID" class="form-control" asp-items="ViewBag.TechnicianID">
                    <option value="" selected>Select Technician</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOpened" class="control-label"></label>
                <input asp-for="DateOpened" class="form-control" />
                <span asp-validation-for="DateOpened" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateClosed" class="control-label"></label>
                <input asp-for="DateClosed" class="form-control" />
                <span asp-validation-for="DateClosed" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (id != null)
                {<input type="submit" value="Update" class="btn btn-primary" />}
                else
                {<input type="submit" value="Add" class="btn btn-primary" />}
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
