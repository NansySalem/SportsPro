@model IEnumerable<SportsPro.Models.Incident>


<table class="table">
    <caption>@ViewData["classify"]</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technician.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOpened)
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @if (item.Technician != null)
            { <td>@Html.DisplayFor(modelItem => item.Technician.Name)</td>}
            else { <td>TBA</td>}

            <td>
                @Html.DisplayFor(modelItem => item.DateOpened)
            </td>
            @if (item.DateClosed == null)
            {
                if (DateTime.Now.Subtract(item.DateOpened).TotalDays > 30)
                {
                <td style="color:red; font-weight:bold"> Open </td> }
                else
                { <td> Open </td>}
            }
            else
            {  <td> Closed </td> }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IncidentID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.IncidentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>